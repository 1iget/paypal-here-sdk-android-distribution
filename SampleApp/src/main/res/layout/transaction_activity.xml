<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stepview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/sdk_black"
            android:text="@string/payments"
            android:textSize="16sp"
            android:layout_marginRight="?attr/actionBarSize"
            android:gravity="center" />
    </android.support.v7.widget.Toolbar>


    <!-- main container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- offline mode option container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline Payments"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/black_arrow" />

                    <TextView
                        android:id="@+id/offline_mode_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@id/arrow"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_centerVertical="true"
                        android:text="ENABLED" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/sdk_dark_grey" />

            </LinearLayout>

            <!-- payment amount container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_amount"
                    android:textColor="@color/sdk_black"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2.00"
                    android:id="@+id/amount"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    />

            </LinearLayout>

            <!-- Steps container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.paypal.heresdk.sampleapp.ui.StepView
                    android:id="@+id/create_invoice_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    stepview:title_text="@string/step_1"
                    stepview:code_text="@string/create_invoice"
                    stepview:button_text="@string/create_invoice_title"
                    stepview:enabled="false"
                    />

                <com.paypal.heresdk.sampleapp.ui.StepView
                    android:id="@+id/create_txn_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    stepview:title_text="@string/step_2"
                    stepview:code_text="@string/create_transaction"
                    stepview:button_text="@string/create_transaction_title"
                    stepview:enabled="false"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/payment_options_container"
                    android:layout_margin="@dimen/activity_vertical_margin">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:text="@string/step_3"
                        android:id="@+id/step3_text"

                        android:textColor="@color/sdk_black"
                        android:layout_alignParentLeft="true"

                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sdk_black"
                            android:text="@string/payment_options"
                            android:id="@+id/payment_options_text"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:fontFamily="sans-serif-thin"
                            />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/black_arrow"
                            android:layout_alignParentRight="true"
                            android:id="@+id/payment_options_arrow"
                            android:layout_centerVertical="true"

                            />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/sdk_dark_grey"></View>

                </LinearLayout>


                <com.paypal.heresdk.sampleapp.ui.StepView
                    android:id="@+id/accept_txn_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    stepview:title_text="@string/step_4"
                    stepview:code_text="@string/accept_transaction"
                    stepview:button_text="@string/accept_transaction_title"
                    stepview:enabled="false"
                    />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



    <LinearLayout
        android:id="@+id/main_layout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_below="@+id/upBanner"
            android:textAllCaps="false"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
        >

            <Button
                android:id="@+id/payment_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/payment_options"
                android:textColor="@color/sdk_white"
                android:layout_weight="1"
                android:onClick="onPaymentOptionsClicked"
                android:background="@drawable/blue_btn_selector"
                />
            <Button
                android:id="@+id/offline_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/offline_mode"
                android:textColor="@color/sdk_white"
                android:layout_weight="1"
                android:onClick="onOfflineModeClicked"
                android:background="@drawable/blue_btn_selector"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:shadowColor="@android:color/white"
                android:shadowRadius="5.0"
                android:text="Payments:"
                android:textColor="@color/sdk_black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            >

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:shadowColor="@android:color/white"
                android:shadowRadius="5.0"
                android:text="Enter a payment amount: "
                android:textColor="@color/sdk_dark_gray"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/small"
                android:paddingLeft="@dimen/small"
                android:background="@drawable/rect_view_amount">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/medium"
                    android:gravity="left"
                    android:shadowColor="@android:color/white"
                    android:shadowRadius="5.0"
                    android:text="$"
                    android:textColor="@color/sdk_dark_gray"
                    android:textSize="18sp" />
                <EditText
                    android:id="@+id/amoun1t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0.00"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    android:focusableInTouchMode="true"/>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/circle"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="5.0"
                android:text="1"
                android:textColor="@color/sdk_grey"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCreateInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:shadowColor="@android:color/white"
                        android:shadowRadius="5.0"
                        android:text="Create Invoice"
                        android:textColor="@color/sdk_blue"
                        android:textSize="20sp"
                        android:onClick="onCreateInvoiceClicked" />

                    <ImageView
                        android:id="@+id/imageBlueButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/small_bluearrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ViewCodeInitSDK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rect_view_code"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:shadowColor="@android:color/white"
                        android:shadowRadius="5.0"
                        android:text="View Code"
                        android:textColor="@color/sdk_white"
                        android:textSize="15sp"
                        android:onClick="onCreateInvoiceViewCodeClicked"
                    />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/createInvoiceCode"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCreateInvoiceCode"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/sdk_grey"
                android:textSize="@dimen/regular"
                android:text="@string/create_invoice"
                android:padding="@dimen/large"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
        android:id="@+id/initMerchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/circle"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowRadius="5.0"
            android:text="2"
            android:textColor="@color/sdk_grey"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCreateTransaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:shadowColor="@android:color/white"
                    android:shadowRadius="5.0"
                    android:text="Create Transaction"
                    android:textColor="@color/sdk_dark_gray"
                    android:textSize="20sp"
                    android:onClick="onCreateTransactionClicked"
                    android:clickable="false"/>

                <ImageView
                    android:id="@+id/imageBlueButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/small_bluearrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ViewCodeCreateTranx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rect_view_code"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:shadowColor="@android:color/white"
                    android:shadowRadius="5.0"
                    android:text="View Code"
                    android:textColor="@color/sdk_white"
                    android:textSize="15sp"
                    android:onClick="onCreateTranxViewCodeClicked"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/createTranxCode"
            android:layout_below="@+id/initMerchant"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCreateTranxCode"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/sdk_grey"
                android:textSize="@dimen/regular"
                android:text="@string/create_transaction"
                android:padding="@dimen/large"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_above="@+id/bottomBanner"
            android:layout_below="@+id/initSDKcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/circle"
                android:gravity="center"
                android:shadowColor="@android:color/white"
                android:shadowRadius="5.0"
                android:text="3"
                android:textColor="@color/sdk_grey"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/small"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAcceptTransaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:shadowColor="@android:color/white"
                        android:shadowRadius="5.0"
                        android:text="Accept Transaction"
                        android:textColor="@color/sdk_dark_gray"
                        android:textSize="20sp"
                        android:onClick="onAcceptTransactionClicked"
                        android:clickable="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/small_bluearrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ViewCodeInitMerchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/rect_view_code"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:shadowColor="@android:color/white"
                        android:shadowRadius="5.0"
                        android:text="View Code"
                        android:textColor="@color/sdk_white"
                        android:textSize="15sp"
                        android:onClick="onViewCodeAcceptTranxClicked"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/initMerchantCode"
            android:layout_below="@+id/initMerchant"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAcceptTransactionCode"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@color/sdk_grey"
                android:textSize="@dimen/regular"
                android:text="@string/accept_transaction"
                android:padding="@dimen/large"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/logout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@color/sdk_grey"
        android:paddingTop="@dimen/medium"
        android:paddingBottom="@dimen/medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/larger"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/medium"
                android:text="@string/merchant_account"
                android:textColor="@color/sdk_black"
                android:textSize="12dp"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/small"
                android:text="@string/merchant_account_email"
                android:textSize="10dp"
                android:textColor="@color/sdk_dark_blue"
            />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/xxxlarge"
            android:background="@color/sdk_dark_gray" />

        <TextView
            android:id="@+id/txtLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect_view_code"
            android:layout_marginLeft="@dimen/xxxlarge"
            android:gravity="center"
            android:shadowColor="@android:color/white"
            android:shadowRadius="5.0"
            android:text="Logout"
            android:textColor="@color/sdk_white"
            android:textSize="15sp"
            android:onClick="onLogoutClicked"
        />
    </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/large"
            android:padding="@dimen/large"  />
    </LinearLayout>


        <LinearLayout
        android:id="@+id/bottomBanner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/sdk_grey"
        android:onClick="goBackToLoginActivity">

        <ImageView
            android:id="@+id/imageFwdBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/gray_backarrow" />

        <TextView
            android:id="@+id/goToConnectPage"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textSize="@dimen/large"
            android:text="@string/go_back_setup"
            android:padding="@dimen/large"
            android:textColor="@color/sdk_dark_gray"/>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>

