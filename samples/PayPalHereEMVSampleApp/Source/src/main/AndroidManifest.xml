<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paypal.emv.sampleapp">

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name="com.paypal.emv.sampleapp.login.LoginScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.paypal.emv.sampleapp.login.OAuthLoginActivity"
            android:label="@string/login_activity_name" android:noHistory="true" />
        <activity android:name="com.paypal.emv.sampleapp.login.StageSelectActivity"
            android:label="@string/stage_select_activity_name" />
        <activity android:name="com.paypal.emv.sampleapp.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/main_activity_name" />
        <activity android:name="com.paypal.emv.sampleapp.DeviceConnectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/main_activity_name"
            android:theme="@style/SDK.Theme.transparent" />
        <activity android:name="com.paypal.merchant.sdk.internal.activities.EMVPaymentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/sdk_app_name"
            android:theme="@style/SDK.Theme.transparent" />
        <activity android:name="com.paypal.merchant.sdk.internal.activities.EMVSignatureActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/sdk_app_name" android:screenOrientation="landscape"></activity>
    </application>

</manifest>
