<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.paypal.emv.sampleapp.activity.SettingsActivity">

    <EditText
        android:id="@+id/id_cc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_cc_name_txt"/>

    <EditText
        android:id="@+id/id_vat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_cc_name"
        android:layout_marginTop="20dp"
        android:hint="@string/hint_vat_id_txt"/>

    <Button
        android:id="@+id/id_save_prefs_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_prefs_button_txt"
        android:layout_below="@+id/id_vat_id"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/id_sig_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_save_prefs_button"
        android:layout_marginTop="20dp">

        <ToggleButton
            android:id="@+id/id_sig_screen_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textOn="Full Screen"
            android:textOff="Pop-Up"
            android:checked="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Show Signature in Fullscreen"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/id_sig_screen_option"
            android:layout_alignTop="@+id/id_sig_screen_option"
            android:layout_toLeftOf="@+id/id_sig_screen_option"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_receipt_options_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_sig_screen_layout"
        android:layout_marginTop="20dp">

        <ToggleButton
            android:id="@+id/id_receipt_options_screen_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textOn="Full Screen"
            android:textOff="Pop-Up"
            android:checked="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Show ReceiptOptions in Fullscreen"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/id_receipt_options_screen_option"
            android:layout_alignTop="@+id/id_receipt_options_screen_option"
            android:layout_toLeftOf="@+id/id_receipt_options_screen_option"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_receipts_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_receipt_options_screen_layout"
        android:layout_marginTop="20dp">

        <ToggleButton
            android:id="@+id/id_receipts_screen_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textOn="Full Screen"
            android:textOff="Pop-Up"
            android:checked="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Show Email/Text Receipt in Fullscreen"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/id_receipts_screen_option"
            android:layout_alignTop="@+id/id_receipts_screen_option"
            android:layout_toLeftOf="@+id/id_receipts_screen_option"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_process_payment_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_receipts_screen_layout"
        android:layout_marginTop="20dp">

        <ToggleButton
            android:id="@+id/id_process_payment_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textOn="Yes"
            android:textOff="No"
            android:checked="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Take Payment after user inserts/taps card"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/id_process_payment_option"
            android:layout_alignTop="@+id/id_process_payment_option"
            android:layout_toLeftOf="@+id/id_process_payment_option"
            android:gravity="center_vertical"/>
    </RelativeLayout>

</RelativeLayout>
